{
  "compilerOptions": {
    "target": "es6", // Consider ES2017 or newer if you're using a newer Node.js version
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
